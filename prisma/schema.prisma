generator client {
  provider = "prisma-client-js"
  //output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model empresas {
  id           BigInt         @id @default(autoincrement())
  nome         String?
  cnpj         String?
  endereco     String?
  created_at   DateTime       @default(now()) @db.Timestamptz(6)
  funcionarios funcionarios[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model funcionarios {
  id         BigInt    @id @default(autoincrement())
  empresa_id BigInt?
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  nome       String?
  cpf        String?   @db.VarChar
  cargo      String?
  empresas   empresas? @relation(fields: [empresa_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  recibos    recibos[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model recibos {
  id             BigInt        @id @default(autoincrement())
  funcionario_id BigInt?
  tipo_recibo    String?
  valor          Decimal?      @db.Decimal
  referencia     String?
  data_pagamento DateTime?     @db.Date
  observacao     String?
  created_at     DateTime      @default(now()) @db.Timestamptz(6)
  funcionarios   funcionarios? @relation(fields: [funcionario_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model usuarios {
  id         BigInt   @id @default(autoincrement())
  nome       String?
  email      String? @unique
  senha_hash String?
  admin      Boolean  @default(false)
  created_at DateTime @default(now()) @db.Timestamptz(6)
}
